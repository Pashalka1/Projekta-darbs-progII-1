using System;
using System.Collections.Generic;
using System.Globalization;
using System.Linq;
using System.Text.Json;
using System.Text.Json.Serialization;

// ==========================
// ValidationException
// ==========================
public class ValidationException : Exception
{
    public ValidationException(string message) : base(message) { }
}

// ==========================
// DateOnly JSON converter
// ==========================
public class DateOnlyJsonConverter : JsonConverter<DateOnly>
{
    private const string Format = "yyyy-MM-dd";
    
    public override DateOnly Read(ref Utf8JsonReader reader, Type typeToConvert, JsonSerializerOptions options)
    {
        var s = reader.GetString();
        if (DateOnly.TryParseExact(s, Format, CultureInfo.InvariantCulture, DateTimeStyles.None, out var d))
            return d;
        throw new JsonException($"NederÄ«gs datuma formÄts: {s}. Gaida {Format}");
    }

    public override void Write(Utf8JsonWriter writer, DateOnly value, JsonSerializerOptions options)
    {
        writer.WriteStringValue(value.ToString(Format));
    }
}

// ==========================
// Tools (palÄ«gmetodes)
// ==========================
public static class Tools
{
    public static string ReadNonEmptyString(string prompt)
    {
        while (true)
        {
            Console.Write(prompt);
            var s = Console.ReadLine();
            if (!string.IsNullOrWhiteSpace(s)) return s.Trim();
            Console.WriteLine("Ievade nedrÄ«kst bÅ«t tukÅ¡a. MÄ“Ä£iniet vÄ“lreiz.");
        }
    }

    public static decimal SafeParseDecimal(string prompt)
    {
        while (true)
        {
            Console.Write(prompt);
            var s = Console.ReadLine()?.Trim();
            if (string.IsNullOrEmpty(s)) { Console.WriteLine("Ievade nedrÄ«kst bÅ«t tukÅ¡a."); continue; }
            s = s.Replace(',', '.');
            if (decimal.TryParse(s, NumberStyles.Number, CultureInfo.InvariantCulture, out var v) && v > 0)
                return v;
            Console.WriteLine("NederÄ«ga summa. Ievadiet pozitÄ«vu skaitli (piem., 123.45).");
        }
    }

    public static DateOnly SafeParseDate(string prompt)
    {
        while (true)
        {
            Console.Write(prompt);
            var s = Console.ReadLine()?.Trim();
            if (string.IsNullOrEmpty(s)) { Console.WriteLine("Ievade nedrÄ«kst bÅ«t tukÅ¡a."); continue; }
            if (DateOnly.TryParseExact(s, "yyyy-MM-dd", CultureInfo.InvariantCulture, DateTimeStyles.None, out var d))
                return d;
            Console.WriteLine("NederÄ«gs datuma formÄts. Izmantojiet YYYY-MM-DD.");
        }
    }

    public static T ReadEnum<T>(string prompt) where T : struct
    {
        while (true)
        {
            Console.Write(prompt);
            var s = Console.ReadLine()?.Trim();
            if (string.IsNullOrEmpty(s)) { Console.WriteLine("Ievade nedrÄ«kst bÅ«t tukÅ¡a."); continue; }
            if (Enum.TryParse<T>(s, true, out var val)) return val;
            Console.WriteLine("NederÄ«ga vÄ“rtÄ«ba. PieejamÄs: " + string.Join(", ", Enum.GetNames(typeof(T))));
        }
    }

    public static string FormatCurrency(decimal amount) => $"{Math.Round(amount, 2):0.00} â‚¬";

    public static decimal SafeDivide(decimal numerator, decimal denominator)
    {
        if (denominator == 0) return 0;
        return numerator / denominator;
    }

    public static string PercentString(decimal part, decimal total)
    {
        if (total == 0) return "0.0%";
        var p = SafeDivide(part * 100, total);
        return $"{Math.Round(p, 1):0.0}%";
    }

    public static bool Confirm(string question)
    {
        Console.Write(question + " (jÄ/nÄ“): ");
        var a = Console.ReadLine()?.Trim().ToLower();
        return a == "jÄ" || a == "ja";
    }

    public static bool TryParseYearMonth(string ym, out int year, out int month)
    {
        year = 0; month = 0;
        var parts = ym.Split('-', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length != 2) return false;
        if (!int.TryParse(parts[0], out year)) return false;
        if (!int.TryParse(parts[1], out month)) return false;
        if (month < 1 || month > 12) return false;
        return true;
    }

    public static void PrintTableHeader(string[] headers)
    {
        Console.WriteLine(new string('-', 80));
        Console.WriteLine($"| {string.Join(" | ", headers.Select(h => h.PadRight(15)))} |");
        Console.WriteLine(new string('-', 80));
    }

    public static void PrintHelp()
    {
        Console.WriteLine("\n=== PALÄªDZÄªBA ===");
        Console.WriteLine("â€¢ IenÄkumi: reÄ£istrÄ“jiet ienÄkumus no darba, investÄ«cijÄm u.c.");
        Console.WriteLine("â€¢ Izdevumi: reÄ£istrÄ“jiet izdevumus pa kategorijÄm");
        Console.WriteLine("â€¢ Abonementi: mÄ“neÅ¡a maksas par servisiem");
        Console.WriteLine("â€¢ MÄ“neÅ¡a pÄrskats: detalizÄ“ta finanÅ¡u analÄ«ze");
        Console.WriteLine("â€¢ JSON: datu apmaiÅ†a starp ierÄ«cÄ“m");
        Console.WriteLine("================\n");
    }

    public static string NormalizeJsonString(string s)
    {
        if (string.IsNullOrEmpty(s)) return s;
        string cleaned = s.Trim();
        // strip BOM
        if (cleaned.Length > 0 && cleaned[0] == '\uFEFF') cleaned = cleaned.Substring(1);
        // replace fancy quotes
        cleaned = cleaned.Replace("â€œ", "\"").Replace("â€", "\"").Replace("â€˜", "'").Replace("â€™", "'");
        // replace non-breaking spaces
        cleaned = cleaned.Replace("\u00A0", " ");
        return cleaned;
    }
}

// ==========================
// Models
// ==========================
public enum Category { Food, Transport, Fun, School, Other }

public class Income
{
    public DateOnly Date { get; set; }
    public string Source { get; set; }
    public decimal Amount { get; set; }

    // Bezparametra konstruktors JSON deserializÄcijai
    public Income() { }

    public Income(DateOnly date, string source, decimal amount)
    {
        if (string.IsNullOrWhiteSpace(source)) throw new ValidationException("Avots nedrÄ«kst bÅ«t tukÅ¡s.");
        if (amount <= 0) throw new ValidationException("Summai jÄbÅ«t lielÄkai par 0.");
        Date = date;
        Source = source.Trim();
        Amount = amount;
    }

    public void Validate()
    {
        if (string.IsNullOrWhiteSpace(Source)) throw new ValidationException("Avots nedrÄ«kst bÅ«t tukÅ¡s.");
        if (Amount <= 0) throw new ValidationException("Summai jÄbÅ«t lielÄkai par 0.");
    }

    // Statiskais saraksts kÄ prasÄ«ts specifikÄcijÄ
    public static List<Income> List { get; set; } = new List<Income>();

    public static void Add()
    {
        try
        {
            var d = Tools.SafeParseDate("Datums (YYYY-MM-DD): ");
            var s = Tools.ReadNonEmptyString("Avots: ");
            var a = Tools.SafeParseDecimal("Summa (â‚¬): ");
            List.Add(new Income(d, s, a));
            Console.WriteLine("âœ… IenÄkums pievienots.");
        }
        catch (ValidationException ex) { Console.WriteLine("âŒ KÄ¼Å«da: " + ex.Message); }
    }

    public static List<Income> GetSorted() => List.OrderByDescending(i => i.Date).ToList();

    public static void PrintAll()
    {
        var sorted = GetSorted();
        if (!sorted.Any()) { Console.WriteLine("ğŸ“­ Nav ienÄkumu ierakstu."); return; }
        
        Tools.PrintTableHeader(new[] {"Datums", "Avots", "Summa"});
        int i = 1;
        foreach (var inc in sorted)
            Console.WriteLine($"| {inc.Date:yyyy-MM-dd}".PadRight(17) + $"| {inc.Source}".PadRight(17) + $"| {Tools.FormatCurrency(inc.Amount)}".PadRight(17) + "|");
        Console.WriteLine(new string('-', 80));
    }

    public static void Delete()
    {
        var sorted = GetSorted();
        if (!sorted.Any()) { Console.WriteLine("ğŸ“­ Nav ierakstu."); return; }
        
        PrintAll();
        var input = Tools.ReadNonEmptyString("Ieraksta numurs (0 = atcelt, -1 = dzÄ“st visu): ");
        if (!int.TryParse(input, out var n)) { Console.WriteLine("âŒ NederÄ«gs numurs."); return; }
        if (n == 0) { Console.WriteLine("âŒ Atcelts."); return; }
        if (n == -1)
        {
            if (Tools.Confirm("âš ï¸ TieÅ¡Äm dzÄ“st visu?"))
            {
                List.Clear();
                Console.WriteLine("âœ… Visi ienÄkumi izdzÄ“sti.");
            }
            return;
        }
        if (n >= 1 && n <= sorted.Count)
        {
            var item = sorted[n - 1];
            List.Remove(item);
            Console.WriteLine("âœ… Ieraksts dzÄ“sts.");
        }
        else Console.WriteLine("âŒ NederÄ«gs numurs.");
    }
}

public class Expense
{
    public DateOnly Date { get; set; }
    public Category Category { get; set; }
    public decimal Amount { get; set; }
    public string Note { get; set; }

    // Bezparametra konstruktors JSON deserializÄcijai
    public Expense() { }

    public Expense(DateOnly date, Category category, decimal amount, string note)
    {
        if (amount <= 0) throw new ValidationException("Summai jÄbÅ«t lielÄkai par 0.");
        if (string.IsNullOrWhiteSpace(note)) throw new ValidationException("PiezÄ«me nedrÄ«kst bÅ«t tukÅ¡a.");
        Date = date;
        Category = category;
        Amount = amount;
        Note = note.Trim();
    }

    public void Validate()
    {
        if (Amount <= 0) throw new ValidationException("Summai jÄbÅ«t lielÄkai par 0.");
        if (string.IsNullOrWhiteSpace(Note)) throw new ValidationException("PiezÄ«me nedrÄ«kst bÅ«t tukÅ¡a.");
    }

    // Statiskais saraksts kÄ prasÄ«ts specifikÄcijÄ
    public static List<Expense> List { get; set; } = new List<Expense>();

    public static void Add()
    {
        try
        {
            var d = Tools.SafeParseDate("Datums (YYYY-MM-DD): ");
            Console.WriteLine("ğŸ“‚ Kategorijas: " + string.Join(", ", Enum.GetNames(typeof(Category))));
            var cat = Tools.ReadEnum<Category>("Kategorija: ");
            var amt = Tools.SafeParseDecimal("Summa (â‚¬): ");
            var note = Tools.ReadNonEmptyString("PiezÄ«me: ");
            List.Add(new Expense(d, cat, amt, note));
            Console.WriteLine("âœ… Izdevums pievienots.");
        }
        catch (ValidationException ex) { Console.WriteLine("âŒ KÄ¼Å«da: " + ex.Message); }
    }

    public static List<Expense> GetSorted() => List.OrderByDescending(e => e.Date).ToList();

    public static void PrintAll(IEnumerable<Expense> source = null)
    {
        var list = (source ?? GetSorted()).ToList();
        if (!list.Any()) { Console.WriteLine("ğŸ“­ Nav izdevumu ierakstu."); return; }
        
        Tools.PrintTableHeader(new[] {"Datums", "Kategorija", "Summa", "PiezÄ«me"});
        int i = 1;
        foreach (var e in list)
            Console.WriteLine($"| {e.Date:yyyy-MM-dd}".PadRight(17) + $"| {e.Category}".PadRight(17) + $"| {Tools.FormatCurrency(e.Amount)}".PadRight(17) + $"| {e.Note}".PadRight(17) + "|");
        Console.WriteLine(new string('-', 80));
    }

    public static void Delete()
    {
        var sorted = GetSorted();
        if (!sorted.Any()) { Console.WriteLine("ğŸ“­ Nav ierakstu."); return; }
        
        PrintAll();
        var input = Tools.ReadNonEmptyString("Ieraksta numurs (0 = atcelt, -1 = dzÄ“st visu): ");
        if (!int.TryParse(input, out var n)) { Console.WriteLine("âŒ NederÄ«gs numurs."); return; }
        if (n == 0) { Console.WriteLine("âŒ Atcelts."); return; }
        if (n == -1)
        {
            if (Tools.Confirm("âš ï¸ TieÅ¡Äm dzÄ“st visus izdevumus?")) 
            { 
                List.Clear(); 
                Console.WriteLine("âœ… Visi izdzÄ“sti."); 
            }
            return;
        }
        if (n >= 1 && n <= sorted.Count)
        {
            var item = sorted[n - 1];
            List.Remove(item);
            Console.WriteLine("âœ… Ieraksts dzÄ“sts.");
        }
        else Console.WriteLine("âŒ NederÄ«gs numurs.");
    }

    public static List<Expense> FilterByDate(DateOnly from, DateOnly to) =>
        List.Where(e => e.Date >= from && e.Date <= to).OrderByDescending(e => e.Date).ToList();

    public static List<Expense> FilterByCategory(Category cat) =>
        List.Where(e => e.Category == cat).OrderByDescending(e => e.Date).ToList();
}

public class Subscription
{
    public string Name { get; set; }
    public decimal MonthlyPrice { get; set; }
    public DateOnly StartDate { get; set; }
    public bool IsActive { get; set; }

    // Bezparametra konstruktors JSON deserializÄcijai
    public Subscription() { }

    public Subscription(string name, decimal price, DateOnly start, bool active)
    {
        if (string.IsNullOrWhiteSpace(name)) throw new ValidationException("Nosaukums nedrÄ«kst bÅ«t tukÅ¡s.");
        if (price <= 0) throw new ValidationException("Cena jÄbÅ«t lielÄka par 0.");
        Name = name.Trim();
        MonthlyPrice = price;
        StartDate = start;
        IsActive = active;
    }

    public void Validate()
    {
        if (string.IsNullOrWhiteSpace(Name)) throw new ValidationException("Nosaukums nedrÄ«kst bÅ«t tukÅ¡s.");
        if (MonthlyPrice <= 0) throw new ValidationException("MÄ“neÅ¡a cena jÄbÅ«t lielÄkai par 0.");
    }

    // Statiskais saraksts kÄ prasÄ«ts specifikÄcijÄ
    public static List<Subscription> List { get; set; } = new List<Subscription>();

    public static void Add()
    {
        try
        {
            var name = Tools.ReadNonEmptyString("Nosaukums: ");
            var price = Tools.SafeParseDecimal("MÄ“neÅ¡a cena (â‚¬): ");
            var date = Tools.SafeParseDate("SÄkuma datums (YYYY-MM-DD): ");
            List.Add(new Subscription(name, price, date, true));
            Console.WriteLine("âœ… Abonements pievienots.");
        }
        catch (ValidationException ex) { Console.WriteLine("âŒ KÄ¼Å«da: " + ex.Message); }
    }

    public static List<Subscription> GetSorted() => List.OrderByDescending(x => x.StartDate).ToList();

    public static void PrintAll()
    {
        var sorted = GetSorted();
        if (!sorted.Any()) { Console.WriteLine("ğŸ“­ Nav abonementu."); return; }
        
        Tools.PrintTableHeader(new[] {"Nosaukums", "Cena", "SÄkums", "Statuss"});
        int i = 1;
        foreach (var s in sorted)
            Console.WriteLine($"| {s.Name}".PadRight(17) + $"| {Tools.FormatCurrency(s.MonthlyPrice)}".PadRight(17) + $"| {s.StartDate:yyyy-MM-dd}".PadRight(17) + $"| {(s.IsActive ? "âœ… AktÄ«vs" : "âŒ NeaktÄ«vs")}".PadRight(17) + "|");
        Console.WriteLine(new string('-', 80));
    }

    public static void Toggle()
    {
        var sorted = GetSorted();
        if (!sorted.Any()) { Console.WriteLine("ğŸ“­ Nav abonementu."); return; }
        
        PrintAll();
        var input = Tools.ReadNonEmptyString("Ievadiet numuru: ");
        if (!int.TryParse(input, out var n) || n < 1 || n > sorted.Count) 
        { 
            Console.WriteLine("âŒ NederÄ«gs numurs."); 
            return; 
        }
        
        var selectedItem = sorted[n - 1];
        selectedItem.IsActive = !selectedItem.IsActive;
        Console.WriteLine($"âœ… Statuss mainÄ«ts: {selectedItem.Name} â†’ {(selectedItem.IsActive ? "AktÄ«vs" : "NeaktÄ«vs")}");
    }

    public static void Delete()
    {
        var sorted = GetSorted();
        if (!sorted.Any()) { Console.WriteLine("ğŸ“­ Nav abonementu."); return; }
        
        PrintAll();
        var input = Tools.ReadNonEmptyString("Ieraksta numurs (0 = atcelt, -1 = dzÄ“st visu): ");
        if (!int.TryParse(input, out var n)) { Console.WriteLine("âŒ NederÄ«gs numurs."); return; }
        if (n == 0) { Console.WriteLine("âŒ Atcelts."); return; }
        if (n == -1)
        {
            if (Tools.Confirm("âš ï¸ TieÅ¡Äm dzÄ“st visus abonementus?")) 
            { 
                List.Clear(); 
                Console.WriteLine("âœ… Visi izdzÄ“sti."); 
            }
            return;
        }
        if (n >= 1 && n <= sorted.Count)
        {
            var item = sorted[n - 1];
            List.Remove(item);
            Console.WriteLine("âœ… Ieraksts dzÄ“sts: " + item.Name);
        }
        else Console.WriteLine("âŒ NederÄ«gs numurs.");
    }
}

// ==========================
// JSON DTO for import/export
// ==========================
public class ExportDto
{
    public List<Income> Incomes { get; set; } = new List<Income>();
    public List<Expense> Expenses { get; set; } = new List<Expense>();
    public List<Subscription> Subscriptions { get; set; } = new List<Subscription>();
}

// ==========================
// Program (UI & Logic)
// ==========================
public class Program
{
    static JsonSerializerOptions jsonOptions = new JsonSerializerOptions
    {
        WriteIndented = true,
        PropertyNameCaseInsensitive = true,
        Converters = { new DateOnlyJsonConverter(), new JsonStringEnumConverter() }
    };

    public static void Main()
    {
        Console.WriteLine("ğŸ¯ PERSONÄªGAIS FINANÅ U PLÄ€NOTÄ€JS");
        Console.WriteLine("======================================");
        
        while (true)
        {
            Console.WriteLine("\n=== GALVENÄ€ IZVÄ’LNE ===");
            Console.WriteLine("1) ğŸ’° IenÄkumi");
            Console.WriteLine("2) ğŸ’¸ Izdevumi"); 
            Console.WriteLine("3) ğŸ“± Abonementi");
            Console.WriteLine("4) ğŸ“‹ Saraksti");
            Console.WriteLine("5) ğŸ” Filtri");
            Console.WriteLine("6) ğŸ“Š MÄ“neÅ¡a pÄrskats");
            Console.WriteLine("7) ğŸ“ Import/Export JSON");
            Console.WriteLine("8) â“ PalÄ«dzÄ«ba");
            Console.WriteLine("0) ğŸšª Iziet");
            
            var choice = Tools.ReadNonEmptyString("IzvÄ“le: ");

            try
            {
                switch (choice)
                {
                    case "1": IncomeMenu(); break;
                    case "2": ExpenseMenu(); break;
                    case "3": SubscriptionMenu(); break;
                    case "4": ShowLists(); break;
                    case "5": FiltersMenu(); break;
                    case "6": MonthReportMenu(); break;
                    case "7": ImportExportMenu(); break;
                    case "8": Tools.PrintHelp(); break;
                    case "0": Console.WriteLine("ğŸ‘‹ AtÄ!"); return;
                    default: Console.WriteLine("âŒ NezinÄma izvÄ“le."); break;
                }
            }
            catch (ValidationException vex) { Console.WriteLine("âŒ ValidÄcijas kÄ¼Å«da: " + vex.Message); }
            catch (JsonException jex) { Console.WriteLine("âŒ JSON kÄ¼Å«da: " + jex.Message); }
            catch (Exception ex) { Console.WriteLine("âŒ KÄ¼Å«da: " + ex.Message); }
        }
    }

    // --- Menus ---
    static void IncomeMenu()
    {
        Console.WriteLine("\n=== IENÄ€KUMI ===");
        Console.WriteLine("1) Pievienot  2) RÄdÄ«t  3) DzÄ“st  0) AtpakaÄ¼");
        var c = Tools.ReadNonEmptyString("IzvÄ“le: ");
        if (c == "1") Income.Add();
        else if (c == "2") Income.PrintAll();
        else if (c == "3") Income.Delete();
    }

    static void ExpenseMenu()
    {
        Console.WriteLine("\n=== IZDEVUMI ===");
        Console.WriteLine("1) Pievienot  2) RÄdÄ«t  3) DzÄ“st  0) AtpakaÄ¼");
        var c = Tools.ReadNonEmptyString("IzvÄ“le: ");
        if (c == "1") Expense.Add();
        else if (c == "2") Expense.PrintAll();
        else if (c == "3") Expense.Delete();
    }

    static void SubscriptionMenu()
    {
        Console.WriteLine("\n=== ABONEMENTI ===");
        Console.WriteLine("1) Pievienot  2) RÄdÄ«t  3) AktivizÄ“t/DeaktivizÄ“t  4) DzÄ“st  0) AtpakaÄ¼");
        var c = Tools.ReadNonEmptyString("IzvÄ“le: ");
        if (c == "1") Subscription.Add();
        else if (c == "2") Subscription.PrintAll();
        else if (c == "3") Subscription.Toggle();
        else if (c == "4") Subscription.Delete();
    }

    static void ShowLists()
    {
        Console.WriteLine("\n=== VISI IERAKSTI (pÄ“c datuma, dilstoÅ¡i) ===");
        var combined = new List<(DateOnly Date, string Text)>();
        combined.AddRange(Income.List.Select(i => (i.Date, $"ğŸ’° [IENÄ€KUMS] {i.Source}: {Tools.FormatCurrency(i.Amount)}")));
        combined.AddRange(Expense.List.Select(e => (e.Date, $"ğŸ’¸ [{e.Category}] {Tools.FormatCurrency(e.Amount)} â€” {e.Note}")));
        combined.AddRange(Subscription.List.Select(s => (s.StartDate, $"ğŸ“± {s.Name}: {Tools.FormatCurrency(s.MonthlyPrice)} â€” {(s.IsActive ? "âœ… AktÄ«vs" : "âŒ NeaktÄ«vs")}")));
        
        if (!combined.Any()) 
        { 
            Console.WriteLine("ğŸ“­ Nav ierakstu."); 
            return; 
        }
        
        Tools.PrintTableHeader(new[] {"Datums", "DetalizÄcija"});
        foreach (var row in combined.OrderByDescending(x => x.Date))
            Console.WriteLine($"| {row.Date:yyyy-MM-dd}".PadRight(17) + $"| {row.Text}".PadRight(62) + "|");
        Console.WriteLine(new string('-', 80));
    }

    static void FiltersMenu()
    {
        Console.WriteLine("\n=== FILTRI ===");
        Console.WriteLine("1) FiltrÄ“t pÄ“c datuma diapazona (ienÄkumi + izdevumi)");
        Console.WriteLine("2) FiltrÄ“t izdevumus pÄ“c kategorijas");
        var c = Tools.ReadNonEmptyString("IzvÄ“le: ");
        
        if (c == "1")
        {
            var from = Tools.SafeParseDate("No datuma (YYYY-MM-DD): ");
            var to = Tools.SafeParseDate("LÄ«dz datumam (YYYY-MM-DD): ");
            
            var inc = Income.List.Where(i => i.Date >= from && i.Date <= to).OrderByDescending(i => i.Date).ToList();
            var exp = Expense.List.Where(e => e.Date >= from && e.Date <= to).OrderByDescending(e => e.Date).ToList();
            
            Console.WriteLine($"\nğŸ“ˆ IenÄkumi ({inc.Count}):");
            foreach (var i in inc) 
                Console.WriteLine($"- {i.Date:yyyy-MM-dd} {i.Source}: {Tools.FormatCurrency(i.Amount)}");
            Console.WriteLine($"ğŸ’° KopÄ ienÄkumi: {Tools.FormatCurrency(inc.Sum(x => x.Amount))}");
            
            Console.WriteLine($"\nğŸ“‰ Izdevumi ({exp.Count}):");
            foreach (var e in exp) 
                Console.WriteLine($"- {e.Date:yyyy-MM-dd} [{e.Category}] {Tools.FormatCurrency(e.Amount)} â€” {e.Note}");
            Console.WriteLine($"ğŸ’¸ KopÄ izdevumi: {Tools.FormatCurrency(exp.Sum(x => x.Amount))}");
        }
        else if (c == "2")
        {
            Console.WriteLine("ğŸ“‚ Kategorijas: " + string.Join(", ", Enum.GetNames(typeof(Category))));
            var cat = Tools.ReadEnum<Category>("Kategorija: ");
            var byCat = Expense.FilterByCategory(cat);
            
            Expense.PrintAll(byCat);
            Console.WriteLine($"ğŸ’° Summa: {Tools.FormatCurrency(byCat.Sum(x => x.Amount))}");
        }
    }

    static void MonthReportMenu()
    {
        var ym = Tools.ReadNonEmptyString("Ievadiet mÄ“nesi (YYYY-MM): ");
        if (!Tools.TryParseYearMonth(ym, out var year, out var month)) 
        { 
            Console.WriteLine("âŒ NederÄ«gs formÄts. Lietojiet YYYY-MM."); 
            return; 
        }

        var monthStart = new DateOnly(year, month, 1);
        var monthEnd = monthStart.AddDays(DateTime.DaysInMonth(year, month) - 1);

        var incomes = Income.List.Where(i => i.Date >= monthStart && i.Date <= monthEnd).ToList();
        var expenses = Expense.List.Where(e => e.Date >= monthStart && e.Date <= monthEnd).ToList();
        var activeSubs = Subscription.List.Where(s => s.IsActive && s.StartDate <= monthEnd).ToList();

        var sumIncome = incomes.Sum(i => i.Amount);
        var sumExpense = expenses.Sum(e => e.Amount);
        var sumSubs = activeSubs.Sum(s => s.MonthlyPrice);
        var net = sumIncome - sumExpense - sumSubs;

        Console.WriteLine($"\nğŸ“Š === PÄ€RSKATS PAR {year}-{month:D2} ===");
        Console.WriteLine($"ğŸ’° IenÄkumi: {Tools.FormatCurrency(sumIncome)}");
        Console.WriteLine($"ğŸ’¸ Izdevumi: {Tools.FormatCurrency(sumExpense)}");
        Console.WriteLine($"ğŸ“± AktÄ«vie abonementi: {Tools.FormatCurrency(sumSubs)}");
        Console.WriteLine($"ğŸ“ˆ Neto (IenÄkumi - Izdevumi - Abon.): {Tools.FormatCurrency(net)}");

        if (expenses.Any())
        {
            Console.WriteLine("\nğŸ“‚ Izdevumi pa kategorijÄm:");
            var byCat = expenses.GroupBy(e => e.Category)
                                .Select(g => new { Cat = g.Key, Sum = g.Sum(x => x.Amount) })
                                .OrderByDescending(x => x.Sum);
            foreach (var c in byCat)
                Console.WriteLine($"- {c.Cat}: {Tools.FormatCurrency(c.Sum)} ({Tools.PercentString(c.Sum, sumExpense)})");

            var largest = expenses.OrderByDescending(e => e.Amount).First();
            Console.WriteLine($"\nğŸ”¥ LielÄkais izdevums: {largest.Category} â€” {Tools.FormatCurrency(largest.Amount)} â€” {largest.Note}");
        }

        var days = DateTime.DaysInMonth(year, month);
        var avgDay = days == 0 ? 0 : Math.Round(Tools.SafeDivide(sumExpense, days), 2);
        Console.WriteLine($"\nğŸ“… VidÄ“jie dienas tÄ“riÅ†i: {Tools.FormatCurrency(avgDay)}");
    }

    static void ImportExportMenu()
    {
        Console.WriteLine("\n=== IMPORT/EXPORT JSON ===");
        Console.WriteLine("1) EksportÄ“t (parÄdÄ«t JSON)");
        Console.WriteLine("2) ImportÄ“t (ielÄ«mÄ“t JSON)");
        Console.WriteLine("0) AtpakaÄ¼");
        
        var c = Tools.ReadNonEmptyString("IzvÄ“le: ");
        if (c == "0") return;
        if (c == "1")
        {
            var dto = new ExportDto { 
                Incomes = Income.List, 
                Expenses = Expense.List, 
                Subscriptions = Subscription.List 
            };
            
            string json = JsonSerializer.Serialize(dto, jsonOptions);
            Console.WriteLine("\n=== EKSPORTA JSON ===");
            Console.WriteLine(json);
            Console.WriteLine("=== EKSPORTS PABEIGTS ===");
        }
        else if (c == "2")
        {
            Console.WriteLine("IelÄ«mÄ“jiet JSON. Ja daudzrindu â€” pabeidziet ar rindas tekstu END. Ja vienrindiÅ†a â€” ielÄ«mÄ“jiet un nospiediet Enter.");
            var lines = new List<string>();
            
            // Read first line
            var firstLine = Console.ReadLine() ?? "";
            if (firstLine.Length > 0 && firstLine[0] == '\uFEFF') 
                firstLine = firstLine.Substring(1); // remove BOM
            
            lines.Add(firstLine);
            
            // Check if it's single-line JSON
            string trimmedFirst = firstLine.Trim();
            if (trimmedFirst.StartsWith("{") && trimmedFirst.EndsWith("}"))
            {
                // single-line JSON - use as is
            }
            else
            {
                // multi-line JSON - read until END
                while (true)
                {
                    var line = Console.ReadLine() ?? "";
                    if (line.Trim() == "END") break;
                    lines.Add(line);
                }
            }
            
            var text = string.Join(Environment.NewLine, lines);
            text = Tools.NormalizeJsonString(text);
            
            if (string.IsNullOrWhiteSpace(text)) 
            { 
                Console.WriteLine("âŒ Nav ievades."); 
                return; 
            }

            try
            {
                var imported = JsonSerializer.Deserialize<ExportDto>(text, jsonOptions);
                if (imported == null) throw new JsonException("TukÅ¡s JSON.");

                // Validate all entries before replacing in-memory data
                var tmpInc = new List<Income>();
                var tmpExp = new List<Expense>();
                var tmpSubs = new List<Subscription>();

                foreach (var i in imported.Incomes ?? Enumerable.Empty<Income>())
                {
                    if (i == null) throw new ValidationException("TukÅ¡s ienÄkuma ieraksts.");
                    i.Validate();
                    tmpInc.Add(i);
                }

                foreach (var e in imported.Expenses ?? Enumerable.Empty<Expense>())
                {
                    if (e == null) throw new ValidationException("TukÅ¡s izdevuma ieraksts.");
                    e.Validate();
                    tmpExp.Add(e);
                }

                foreach (var s in imported.Subscriptions ?? Enumerable.Empty<Subscription>())
                {
                    if (s == null) throw new ValidationException("TukÅ¡s abonementa ieraksts.");
                    s.Validate();
                    tmpSubs.Add(s);
                }

                // All validated â€” replace data
                Income.List = tmpInc;
                Expense.List = tmpExp;
                Subscription.List = tmpSubs;
                Console.WriteLine("âœ… ImportÄ“ts veiksmÄ«gi.");
            }
            catch (Exception ex)
            {
                Console.WriteLine("âŒ Importa kÄ¼Å«da: " + ex.Message);
                Console.WriteLine("âš ï¸ Dati netika mainÄ«ti.");
            }
        }
    }
}
